{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
     "paths": {
            "@components/*": ["./components/*"],
            "@hooks/*": ["./hooks/*"],
            "@utils/*": ["./utils/*"],
            "@assets/*": ["./assets/*"],
            "@layouts/*": ["./layouts/*"],
            "@api/*": ["./api/*"],
            "@store/*": ["./store/*"],
            "@app/*": ["./*"]
        }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
